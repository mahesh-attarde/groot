#! /bin/bash

function extract {
    case $1 in
        *.tar.bz2) tar xjf $1                    ;;
        *.tar.gz)  tar xzf $1                    ;;
        *.tar.xz)  tar zxf $1                   ;;
        *.bz2)     bzip2 -d $1                   ;;
        *.rar)     unrar x $1                    ;;
        *.gz)      gzip -d $1                    ;;
        *.tar)     tar xf $1                     ;;
        *.tbz2)    tar xjf $1                    ;;
        *.tgz)     tar xzf $1                    ;;
        *.xz)      xz -d $1                      ;;
        *.zip)     unzip $1                      ;;
        *.Z)       uncompress $1                 ;;
        *)         echo "Format can't be recognize" ;;
    esac
}

if [ "$#" -lt 1 ]; then
    >&2 echo "Wrong number of parameters"
    echo "extract.sh compress_file_name"
    return
else
    extract $1
fi
